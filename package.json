  "type": "module",
  "scripts": {
    "all": "pnpm build && pnpm lint && pnpm test",
    "build": "pnpm -r --aggregate-output build",
    "format": "eslint . --fix && sort-package-json package.json packages/*/package.json && prettier . --write ",
