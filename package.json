    "test": "pnpm -r --aggregate-output test:once"
  },
  "dependencies": {
    "@mcous/eslint-config": "workspace:*",
    "@mcous/prettier-config": "workspace:*",
    "@mcous/typescript-config": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^24.3.3",
    "eslint": "^9.35.0",
    "prettier": "^3.6.2",
    "sort-package-json": "^3.4.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "vitest-when": "^0.8.0"
  },
  "packageManager": "pnpm@10.16.0+sha512.8066e7b034217b700a9a4dbb3a005061d641ba130a89915213a10b3ca4919c19c037bec8066afdc559b89635fdb806b16ea673f2468fbb28aabfa13c53e3f769"
