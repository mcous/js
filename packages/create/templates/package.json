{
  "name": "${{ name }}",
  "version": "0.0.0",
  "description": "",
  "keywords": [],
  "homepage": "https://github.com/${{ repository }}#readme",
  "bugs": {
    "url": "https://github.com/${{ repository }}/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/${{ repository }}.git"
  },
  "license": "MIT",
  "author": "${{ author }}",
  "type": "module",
  "exports": {
    "types": "./dist/index.d.ts",
    "default": "./dist/index.js"
  },
  "scripts": {
    "_eslint": "eslint \"**/*.{js,cjs,ts,tsx}\"",
    "_prettier": "prettier \"**/*.{js,cjs,ts,tsx,md,mdx,json,yml,yaml}\"",
    "format": "pnpm _prettier --write",
    "lint": "pnpm _prettier --check && pnpm _eslint"
  },
  "prettier": "@mcous/prettier-config",
  "eslintConfig": {
    "extends": "@mcous/eslint-config",
    "root": true
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}
